@model ErzurumOdmMvc.Areas.ODM.Model.BilgilerimViewModel
@{
    ViewBag.Title = "Bilgilerim";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
                    <div id="uyari" class="alert alert-success alert-dismissible hidden">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fas fa-check"></i> Uyarı!</h5>
                        @Html.ValidationSummary()
                    </div>
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Bilgilerim</h3>
                        </div>

                        @using (Html.BeginForm("Bilgilerim", "Kullanici", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="card-body">
                                <div class="form-group">
                                    <label class="col-md-4">İlçe</label>
                                    <span class="col-md-8">@Model.IlceAdi</span>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Kurum</label>
                                    <span class="col-md-8">@Model.KurumAdi</span>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4">Giriş Bilgisi</label>
                                    <span class="col-md-8">@Model.TcKimlik</span>
                                </div>
                                <div class="form-group">
                                    <label>Adı Soyadı</label>
                                    @Html.TextBoxFor(x => x.AdiSoyadi, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>E-mail Adresi</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Cep Telefonu</label>
                                    @Html.TextBoxFor(x => x.CepTlf, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>Şifre</label><span class="info float-right">Şifrenizi değiştirmeyecekseniz boş bırakınız.</span>
                                    @Html.PasswordFor(x => x.Sifre, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary float-right">Kaydet</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section FooterScript
{
    @if (ViewBag.Uyari != null && ViewBag.Uyari.ToString() == "islemTamam")
    {
        <script>document.getElementById("uyari").className = "alert alert-info alert-dismissible";</script>
    }
    @if (ViewBag.Uyari != null && ViewBag.Uyari.ToString() == "uyari")
    {
        <script>document.getElementById("uyari").className = "alert alert-danger alert-dismissible";</script>
    }
}
