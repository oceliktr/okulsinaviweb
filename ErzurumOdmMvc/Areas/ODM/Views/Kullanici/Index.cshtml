@using ErzurumOdmMvc.Common.Enums
@using ErzurumOdmMvc.Common.Library
@model ErzurumOdmMvc.Areas.ODM.Model.KullanicilarViewModel
@{
    ViewBag.Title = "Kullanıcılar";
    int a = 0;
}
@section HeaderSection
{
    <link rel="stylesheet" href="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.css">
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a href="@Url.Action("Yeni")" class="btn btn-primary float-right mb-2"><i class="fa fa-plus-circle mr-2"></i> Yeni Kurum</a>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm(null, null, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-2 mb-2">
                                    <select id="ilceler" name="ilceler" class="form-control">
                                        <option value="">--- İlçe Seçiniz ---</option>
                                        @foreach (var ilce in Model.Ilceler)
                                        {
                                            <option value="@ilce.Id">@ilce.IlceAdi</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2 mr-2">
                                    <select id="okullar" name="okullar" class="form-control">
                                        <option value="">--- İlçe Seçiniz ---</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2 mr-2">
                                    <select id="branslar" name="branslar" class="form-control">
                                        <option value="">--- Seçiniz ---</option>
                                        @foreach (var brans in Model.Branslar)
                                        {
                                            <option value="@brans.Id">@brans.BransAdi</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2 mr-2">
                                    <select id="yetki" name="yetki" class="form-control">
                                        <option value="">--- Seçiniz ---</option>
                                        @foreach (var yetki in Model.KullaniciYetkileri)
                                        {
                                            <option value="@yetki.ToString()">@Yetki.Getir(yetki.ToString())</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 mb-1 mr-2">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Listele</button>
                                </div>
                            </div>

                            }
                            
                            <table class="table table-responsive-sm table-bordered table-hover table-head-fixed">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Adı Soyadı</th>
                                        <th>Yetki</th>
                                        <th style="width: 130px">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Kullanicilar != null&&Model.Kullanicilar.Count()>0)
                                    {
                                        foreach (var item in Model.Kullanicilar)
                                        {
                                            string[] yetki = item.Yetki.Split('|');
                                            a++;
                                    <tr>
                                        <td>@a</td>
                                        <td>@item.AdiSoyadi</td>
                                        <td>
                                            @foreach (var s in yetki)
                                            {
                                                if (!string.IsNullOrEmpty(s))
                                                {
                                                    @(Yetki.Getir(s) + ", ")
                                                }
                                            }
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-success btn-sm" data-toggle="modal" data-target="#kullanicilar" data-kullanici="@item.TcKimlik" title="@item.AdiSoyadi Bilgileri" href="#"><i class="fas fa-user"></i></a>
                                            <a class="btn btn-info btn-sm" title="Düzenle" href="@Url.Action("Guncelle", new {id = item.Id})"><i class="fas fa-edit"></i></a>
                                            <a class="btn btn-danger btn-sm" title="Sil" href="#" onclick="Sil(@item.Id, '@item.AdiSoyadi');return false;"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="6" class="text-center">Listelemek için formdan kriterler seçiniz.</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="kullanicilarLabel" id="kullanicilar">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kullanıcı Bilgileri</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"> Kapat</button>
            </div>
        </div>
    </div>
</div>
@section FooterScript
{
    <script src="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        $(function () {
            $('[data-toggle="modal"]').tooltip();
        });
       
        $("#ilceler").on('change',
            function () {

                var ilceId = $(this).val();

                $.ajax(
                    {
                        type: "POST",
                        url: "/ODM/Kurum/IlceKurumlari?ilce=" + ilceId,
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (data) {

                            var okullarSelect = $('#okullar');

                            okullarSelect.empty();

                            okullarSelect.append('<option selected="true" disabled>--- Okul Seçiniz ---</option>');
                            okullarSelect.prop('selectedIndex', 0);

                            $.each(data, function (key, entry) {
                                okullarSelect.append($('<option></option>')
                                    .attr('value', entry.KurumKodu)
                                    .text(entry.KurumAdi));
                            });
                        },
                        error: function () {

                        }
                    }
                    );

            });
        
        function Sil(e,k) {
            Swal.fire({
                title: 'Silmek istiyor musunuz?',
                text: k+" isimli kurumu silmek istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet Sil',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        url: "/ODM/Kurum/Sil/" + e,
                        success: function(data) {
                            if (data.Sonuc) {
                                Swal.fire({
                                    icon: 'success',
                                    title:'Silindi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                                setTimeout(Gonder(),3000);
                                function Gonder() {
                                    location.href = "/ODM/Kurum?ilce="+ilce+"&tur="+tur;
                                }
                            } else {
                                Swal.fire({
                                    icon: 'warning',
                                    title:'Silinemedi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                            }
                        },
                        eror: function(data) {
                            Swal.fire({
                                icon: 'error',
                                title:'Hata oluştu!',
                                text: data.Mesaj,
                                showConfirmButton: true,
                                confirmButtonText: "Tamam"
                            });
                        }
                    });
                }
            });
        }

        $('#kullanicilar').on('shown.bs.modal',
            function (e) {
                var tckimlik = $(e.relatedTarget).data("kullanici");
              
                $('#kullanicilar .modal-body').load("/ODM/Kullanici/KullaniciBilgileri/?tcKimlik="+tckimlik);

            });
    </script>
}
