@using ErzurumOdmMvc.Common.Library
@model ErzurumOdmMvc.Areas.ODM.Model.KurumlarViewModel
@{
    ViewBag.Title = "Kurumlar";

    int ilceId = Request.QueryString["ilce"].ToInt32() == 0 ? 21 : Request.QueryString["ilce"].ToInt32();
    string tur = string.IsNullOrEmpty(Request.QueryString["tur"]) ? "" : Request.QueryString["tur"];
    int a = 0;
}
@section HeaderSection
{
    <link rel="stylesheet" href="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.css">
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a href="@Url.Action("Yeni")" class="btn btn-primary float-right mb-2"><i class="fa fa-plus-circle mr-2"></i> Yeni Kurum</a>
                        </div>
                        <div class="card-body">
                            <div class="mb-2 float-right">
                                <select id="ilceler" class="form-control">
                                    <option value="">--- İlçe Seçiniz ---</option>
                                    @foreach (var ilce in Model.Ilceler)
                                    {
                                        <option value="@ilce.Id" @(ilceId == ilce.Id ? "selected" : "")>@ilce.IlceAdi</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-2 mr-2 float-right">
                                <select id="tur" class="form-control">
                                    <option value="">--- Tümü ---</option>
                                    <option value="Anaokulu" @(tur == "Anaokulu" ? "selected" : "")>Anaokullar</option>
                                    <option value="İlkokul" @(tur == "İlkokul" ? "selected" : "")>İlk Okullar</option>
                                    <option value="Ortaokul" @(tur == "Ortaokul" ? "selected" : "")>Orta Okullar</option>
                                    <option value="Lise" @(tur == "Lise" ? "selected" : "")>Liseler</option>
                                    <option value="MeslekiLise" @(tur == "MeslekiLise" ? "selected" : "")>Meslek Liseleri</option>
                                    <option value="HEM" @(tur == "HEM" ? "selected" : "")>Halk Eğitim Merkezleri</option>
                                    <option value="Kurum" @(tur == "Kurum" ? "selected" : "")>RAM vb. Kurumlar</option>
                                    <option value="MEM" @(tur == "MEM" ? "selected" : "")>Milli Eğitim Müdürlükleri</option>
                                </select>
                            </div>
                            <table class="table table-bordered table-hover table-head-fixed">
                                <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>İlçe Adı</th>
                                    <th>Kurumkodu</th>
                                    <th>Kurum Adı</th>
                                    <th>Türü</th>
                                    <th style="width: 180px">İşlem</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Kurumlar.Result)
                                {
                                    a++;
                                    <tr>
                                        <td>@a</td>
                                        <td>@item.IlceAdi</td>
                                        <td>@item.KurumKodu</td>
                                        <td>@item.KurumAdi</td>
                                        <td>@item.KurumTuru</td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-success btn-sm" href="#" title="@item.KurumAdi Kullanıcıları" data-toggle="modal" data-kurumKodu="@item.KurumKodu" data-kurum="@item.KurumAdi" data-target="#kullanicilar"><i class="fas fa-users"></i></a>
                                            <a class="btn btn-info btn-sm" title="Düzenle" href="@Url.Action("Guncelle", new {id = item.Id})"><i class="fas fa-pencil-alt"></i></a>
                                            <a class="btn btn-danger btn-sm" title="Sil" href="#" onclick="Sil(@item.Id, '@item.KurumAdi');return false;"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="kullanicilarLabel" id="kullanicilar">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="kurumAdimodal"></span> Kullanıcıları</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"> Kapat</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="kullanicilarLabel" id="kullanicilarDetay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kullanıcı Bilgileri</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"> Kapat</button>
            </div>
        </div>
    </div>
</div>
@section FooterScript
{
    <script src="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        $(function () {
            $('[data-toggle="modal"]').tooltip();
        });
        var ilce =@ilceId;
        var tur ="@tur";

        $("#ilceler").on('change',
            function () {
                location.href = "/ODM/Kurum?ilce=" + this.value+"&tur="+tur;
            });
        $("#tur").on('change',
            function () {
                location.href = "/ODM/Kurum?ilce="+ilce+"&tur="+ this.value;
            });


        function Sil(e,k) {
            Swal.fire({
                title: 'Silmek istiyor musunuz?',
                text: k+" isimli kurumu silmek istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet Sil',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        url: "/ODM/Kurum/Sil/" + e,
                        success: function(data) {
                            if (data.Sonuc) {
                                Swal.fire({
                                    icon: 'success',
                                    title:'Silindi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                                setTimeout(Gonder(),3000);
                                function Gonder() {
                                    location.href = "/ODM/Kurum?ilce="+ilce+"&tur="+tur;
                                }
                            } else {
                                Swal.fire({
                                    icon: 'warning',
                                    title:'Silinemedi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                            }
                        },
                        eror: function(data) {
                            Swal.fire({
                                icon: 'error',
                                title:'Hata oluştu!',
                                text: data.Mesaj,
                                showConfirmButton: true,
                                confirmButtonText: "Tamam"
                            });
                        }
                    });
                }
            });
        }

        $('#kullanicilar').on('shown.bs.modal',
            function (e) {
                var kurumadi = $(e.relatedTarget).data("kurum");
                $("#kurumAdimodal").html(kurumadi);
                console.log(kurumadi);
                var kurumKodu = $(e.relatedTarget).data("kurumkodu");
                $('#kullanicilar .modal-body').load("/ODM/Kullanici/OkulListesi/?kurumKodu="+kurumKodu);

            });

        $('#kullanicilarDetay').on('shown.bs.modal',
            function (e) {
                var tckimlik = $(e.relatedTarget).data("kullanici");
              
                $('#kullanicilarDetay .modal-body').load("/ODM/Kullanici/KullaniciBilgileri/?tcKimlik="+tckimlik);

            });
    </script>
}
