@using ErzurumOdmMvc.Common.Enums
@using ErzurumOdmMvc.Common.Library
@using ErzurumOdmMvc.Library
@model System.Threading.Tasks.Task<IEnumerable<ErzurumOdmMvc.Entities.SinavEvrak>>
@{
    ViewBag.Title = "Sınav Evrakları";
    int a = 0;
}
@section HeaderSection
{
    <link rel="stylesheet" href="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.css">
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            @if (CurrentSession.Kullanici.Yetki.Contains(KullaniciSeviye.Root.ToString()))
                            {
                                <a href="@Url.Action("Yeni")" class="btn btn-primary float-right mb-2"><i class="fa fa-plus-circle mr-2"></i> Yeni Evrak</a>
                            }
                        </div>
                        <div class="card-body">

                            <table class="table table-bordered table-hover table-head-fixed">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Açıklama</th>
                                        <th>İndirme Zamanı</th>
                                        <th>İndir</th>
                                        @if (CurrentSession.Kullanici.Yetki.Contains(KullaniciSeviye.Root.ToString()))
                                        {
                                            <th style="width: 180px">İşlem</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Result)
                                    {
                                        a++;
                                        <tr>
                                            <td>@a</td>
                                            <td>@item.Aciklama</td>
                                            <td>@item.BaslangicTarihi.TarihYaz() - @item.BitisTarihi.TarihYaz()</td>
                                            <td>
                                                @if (TarihIslemleri.YerelTarih() >= item.BaslangicTarihi && TarihIslemleri.YerelTarih() <= item.BitisTarihi)
                                                {
                                                    <a href="#" onclick="Indir(@item.Id)"><i class="fa fa-download"></i></a>
                                                }
                                            </td>
                                            @if (CurrentSession.Kullanici.Yetki.Contains(KullaniciSeviye.Root.ToString()))
                                            {
                                                <td class="project-actions text-right">
                                                    <a class="btn btn-info btn-sm" title="Düzenle" href="@Url.Action("Guncelle", new {id = item.Id})"><i class="fas fa-pencil-alt"></i></a>
                                                    <a class="btn btn-danger btn-sm" title="Sil" href="#" onclick="Sil(@item.Id, '@item.Aciklama');return false;"><i class="fas fa-trash"></i></a>
                                                </td>
                                            }

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card card-warning">
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li>
                                    Bu ekranda sadece okulunuza özel gönderilen sınav evrakları listelenir. Gelmesi gereken evrağı listede göremiyorsanız lütfen bize <a href="@Url.Action("Index","Yonetim")">buradaki</a> numaralardan ulaşınız.
                                </li>
                                <li>Dosyaya erişim zamanı gelinceye kadar indirme butonu kapalı kalacaktır. Sınav evrağını indirebilmek için indirme zamanını beklemeniz gerekmektedir.</li>
                                <li></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section FooterScript
{
    <script src="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>
        function Sil(e, k) {
            Swal.fire({
                title: 'Silmek istiyor musunuz?',
                text: k + " isimli dosyayı silmek istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet Sil',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        url: "/ODM/SinavEvrak/Sil/" + e,
                        success: function (data) {
                            if (data.Sonuc) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Silindi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                                setTimeout(Gonder(), 3000);
                                function Gonder() {
                                    location.href = "/ODM/SinavEvrak/";
                                }
                            } else {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Silinemedi!',
                                    text: data.Mesaj,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                            }
                        },
                        eror: function (data) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata oluştu!',
                                text: data.Mesaj,
                                showConfirmButton: true,
                                confirmButtonText: "Tamam"
                            });
                        }
                    });
                }
            });
        }

        function Indir(id) {
            $.ajax({
                type: "POST",
                url: "/ODM/SinavEvrak/Indir/" + id,
                success: function (data) {
                    if (data.Sonuc) {
                        Swal.fire({
                            icon: 'success',
                            title: 'İndiriliyor!',
                            text: data.Mesaj,
                            showConfirmButton: true,
                            confirmButtonText: "Tamam",
                            timer:2000
                        });
                        window.location.href = "/ODM/SinavEvrak/EvrakDown/" + id;
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'İndirilemedi!',
                            text: data.Mesaj,
                            showConfirmButton: true,
                            confirmButtonText: "Tamam"
                        });
                    }
                },
                eror: function (data) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata oluştu!',
                        text: data.Mesaj,
                        showConfirmButton: true,
                        confirmButtonText: "Tamam"
                    });
                }
            });
        }
    </script>
}
