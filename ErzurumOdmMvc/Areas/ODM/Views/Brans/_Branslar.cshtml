@model System.Threading.Tasks.Task<IEnumerable<ErzurumOdmMvc.Entities.Brans>>

<table class="table table-bordered table-hover table-head-fixed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Branş Adı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Result.OrderByDescending(x=>x.BransAdi))
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.BransAdi</td>
            <td class="text-right">
                <a data-toggle="modal" data-target="#modalDuzenleBrans" data-id="@item.Id" class="btn btn-info btn-sm" href="#"><i class="fas fa-pencil-alt"></i></a>
                <a class="btn btn-danger btn-sm" href="#" onclick="Sil(@item.Id); return false;"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

