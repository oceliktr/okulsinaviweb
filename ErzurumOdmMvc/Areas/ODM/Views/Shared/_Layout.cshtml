@using ErzurumOdmMvc.Common.Library
@using ErzurumOdmMvc.Entities
@using ErzurumOdmMvc.Library
@{
    SiteAyar ayar = CacheHelper.SiteAyarFromChache();
    Kullanici kullanici = CurrentSession.Kullanici;
    if (kullanici == null)
    {
        Response.Redirect("/ODM/Giris");
    }
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ayar.SiteAdi @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/Areas/ODM/Content/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="~/Areas/ODM/Content/dist/css/adminlte.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Areas/ODM/Content/images/Odm_logo_seffaf.ico" />
    <link href="~/Areas/ODM/Content/Site.css" rel="stylesheet" />
    @RenderSection("HeaderSection", false)
</head>
<body class="hold-transition sidebar-mini layout-navbar-fixed text-sm layout-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">

                @if (CurrentSession.Kullanici.Yetki.Contains("Root") || CurrentSession.Kullanici.Yetki.Contains("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" title="Site Ayarları" href="@Url.Action("Ayarlar","Yonetim")">
                            <i class="fas fa-cogs"></i>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" title="Çıkış" href="/ODM/Giris/Cikis">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/ODM" class="brand-link text-sm" title="@ayar.SiteAdi">
                <img src="/Areas/ODM/Content/images/web_sayfa_logo.jpg">
            </a>
            <div class="sidebar">
                @Html.Partial("_PartialAdminMenu")
            </div>
        </aside>

        @RenderBody()

        <footer class="main-footer">
            <strong>Copyright &copy; 2019 <a target="_blank" href="http://serdizayn.com.tr">Serdizayn</a>.</strong> Tüm Hakları Saklıdır
        </footer>
    </div>
    <script src="~/Areas/ODM/Content/plugins/jquery/jquery.min.js"></script>
    <script src="~/Areas/ODM/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/ODM/Content/dist/js/adminlte.min.js"></script>
    @RenderSection("FooterScript", false)
</body>
</html>