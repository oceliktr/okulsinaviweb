@using ErzurumOdmMvc.Common.Enums
@using ErzurumOdmMvc.Entities
@using ErzurumOdmMvc.Library
@{
    Kullanici kullanici = CurrentSession.Kullanici;
    if (kullanici == null)
    {
        CurrentSession.Get<Kullanici>();
    }
    string controllerName = "";
    string actionName = "";

    if (Request.RequestContext.RouteData.Values["controller"] != null)
    {
        controllerName = Request.RequestContext.RouteData.Values["controller"].ToString();
    }
    if (Request.RequestContext.RouteData.Values["action"] != null)
    {
        actionName = Request.RequestContext.RouteData.Values["action"].ToString();
    }
    string yetki = CurrentSession.Kullanici.Yetki;
}
<nav class="mt-5">
    <ul class="nav nav-pills nav-sidebar flex-column text-sm nav-flat nav-compact nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">

        <li class="nav-header">GENEL</li>

        <li class="nav-item">
            <a href="@Url.Action("Bilgilerim","Kullanici")" class="nav-link @(controllerName=="Kullanici"&&actionName=="Bilgilerim"?"active":"")"><i class="nav-icon far fa-user"></i><p>Bilgilerim</p></a>
        </li>
        @if (yetki.Contains(KullaniciSeviye.Root.ToString()))
        {
            <li class="nav-item">
                <a href="@Url.Action("Index", "Sinav")" class="nav-link @(controllerName == "Sinav" ? "active" : "")">
                    <i class="nav-icon fa fa-pencil-alt"></i>
                    <p>Sınavlar</p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "Brans")" class="nav-link @(controllerName == "Brans" ? "active" : "")">
                    <i class="nav-icon fas fa-code-branch"></i>
                    <p>Branşlar</p>
                </a>
            </li>

            <li class="nav-item">
                <a href="@Url.Action("Index", "Kurum")" class="nav-link @(controllerName == "Kurum" ? "active" : "")">
                    <i class="nav-icon fa fa-school"></i>
                    <p>Kurumlar</p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "CkYazilim")" class="nav-link @(controllerName == "CkYazilim" ? "active" : "")">
                    <i class="nav-icon fa fa-file-code"></i>
                    <p>CK Yazılım Veri Yükle</p>
                </a>
            </li>
        }
        @if (yetki.Contains(KullaniciSeviye.Root.ToString()) || yetki.Contains(KullaniciSeviye.Admin.ToString()))
        {
            <li class="nav-item">
                <a href="@Url.Action("Index", "Kullanici")" class="nav-link @(controllerName == "Kullanici" &&actionName!="Bilgilerim"? "active" : "")">
                    <i class="nav-icon fa fa-users"></i>
                    <p>Kullanıcılar</p>
                </a>
            </li>
        }
        @if (yetki.Contains(KullaniciSeviye.Root.ToString()) || yetki.Contains(KullaniciSeviye.Admin.ToString()) || yetki.Contains(KullaniciSeviye.LgsIlKomisyonu.ToString()) || yetki.Contains(KullaniciSeviye.IlceMEMYetkilisi.ToString()) || yetki.Contains(KullaniciSeviye.OkulYetkilisi.ToString()))
        {
            <li class="nav-item">
                <a href="@Url.Action("Index", "KazanimKarne")" class="nav-link @(controllerName == "KazanimKarne"? "active" : "")">
                    <i class="nav-icon fas fa-chart-line"></i>
                    <p>Kazanım Karneleri</p>
                </a>
            </li>
        }
        @if (yetki.Contains(KullaniciSeviye.OkulYetkilisi.ToString()) || yetki.Contains(KullaniciSeviye.Root.ToString()))
        {
            <li class="nav-item">
                <a href="@Url.Action("Index", "SinavEvrak")" class="nav-link @(controllerName == "SinavEvrak"? "active" : "")">
                    <i class="nav-icon fa fa-folder-open"></i>
                    <p>Sınav Evrakları</p>
                </a>
            </li>
        }
    </ul>
</nav>