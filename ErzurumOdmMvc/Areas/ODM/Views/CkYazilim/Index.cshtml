@model IEnumerable<ErzurumOdmMvc.Entities.CKKarne.CkSinavAdi>
@{
    ViewBag.Title = "CK Yazılım Veri Yükle";
    string seciliId = Request.Form["sinav"];
}
@section HeaderSection
{
    <link rel="stylesheet" href="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.css">
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row"> 
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
                    <div id="uyari" class="alert alert-success alert-dismissible hidden">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fas fa-check"></i> Uyarı!</h5>
                        @Html.ValidationSummary()
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@ViewBag.Title</h3>

                        </div>
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Sınav Adı</label>
                                            <select id="sinav" name="sinav" class="custom-select">
                                                <option value="">--- Seçiniz ---</option>
                                                @foreach (var kt in Model)
                                                {
                                                    <option value="@kt.SinavId" @(seciliId==kt.SinavId.ToString()?"selected":"")>@kt.SinavAdi</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        Yüklenen dosyada sınav adı bilgisi ( {SinavAdi} tağı ) varsa sınav seçmeyiniz.
                                        <a href="#" onclick="Sil()">Seçili sınavı sil</a>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="updateFile">Dosya</label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="updateFile" name="updateFile">
                                                    <label class="custom-file-label" for="updateFile">Dosya seçiniz</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <p>CK Yazılımı ile oluşturulan *.ck uzantılı dosyayı seçip yükleyiniz.</p>
                                        <p>
                                            Dosya boyutu büyük ise not editörleri ile açıp küçük dosyalara ayırınız.<br /> İlk dosyada {SinavAdi} etiketinin olması gerekmektedir. <br />
                                            Sonraki dosyaları yüklerken ilk dosya ile oluşturulan sınav adını seçip yükleyiniz.
                                        </p>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <button type="submit" id="gonderBtn" class="btn btn-primary float-right">Yükle</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section FooterScript
{
    <script src="~/Areas/ODM/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script>

        function Sil() {
            var id = $("#sinav").val();
            if (id === "") {
                Swal.fire({
                    title: 'Dikkat',
                    text: "Silmek için bir sınav seçiniz.",
                    icon: 'error',
                    timer:2000,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Tamam'
                });
            } else {
                Swal.fire({
                    title: 'Silmek istiyor musunuz?',
                    text: "Seçili sınavı silmek istediğinizden emin misiniz? \nSınava ait tüm veriler silnecektir.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet Sil',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {
                    if (result.value) {
                        $.ajax({
                            type: "POST",
                            url: "/ODM/CkYazilim/Sil/" + id,
                            success: function(data) {
                                if (data.Sonuc) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Silindi!',
                                        text: data.Mesaj,
                                        timer:3000,
                                        showConfirmButton: true,
                                        confirmButtonText: "Tamam"
                                    });
                                    setTimeout(location.href = "/ODM/CkYazilim/", 3000);
                                    
                                } else {
                                    Swal.fire({
                                        icon: 'warning',
                                        title: 'Silinemedi!',
                                        text: data.Mesaj,
                                        timer:3000,
                                        showConfirmButton: true,
                                        confirmButtonText: "Tamam"
                                    });
                                }
                            },
                            eror: function(data) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Hata oluştu!',
                                    text: data.Mesaj,
                                    timer:3000,
                                    showConfirmButton: true,
                                    confirmButtonText: "Tamam"
                                });
                            }
                        });
                    }
                });
            }
        }
    </script>

    @if (ViewBag.Uyari != null && ViewBag.Uyari.ToString() == "islemTamam")
    {
        <script>document.getElementById("uyari").className = "alert alert-info alert-dismissible";</script>
    }
    @if (ViewBag.Uyari != null && ViewBag.Uyari.ToString() == "uyari")
    {
        <script>document.getElementById("uyari")
    .className = "alert alert-danger alert-dismissible";</script>
    }
}
